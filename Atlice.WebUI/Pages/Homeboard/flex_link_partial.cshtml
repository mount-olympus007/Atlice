@model Atlice.Domain.Entities.TapLink

@{
    Layout = null;

}
<div class="connect-list-item-form-block w-form">
    <form id="email-form-5" name="email-form-5" data-name="Email Form 5" method="get" class="form-15">
        <div class="div-block-96">
            <img src="@Model.GetLogo(Model.SocialProvider)" loading="lazy" alt="" class="friend-photo">
            @if (Model.ContactPage)
            {
                <div class="online-status on"></div>

            }
            else
            {
                <div class="online-status off"></div>

            }
        </div>
         <div class="div-block-96" style="color:red;">
             *
         </div>
        
        <div class="div-block-95">
            <div class="div-block-93">
                <div class="link-input-toggle-block">
                    <input onblur="javascript:{var string = this.value;if (!~string.indexOf('http') && string != '') {string = 'https://' + string;} this.value=string; fetch('/homeboard/Index?handler=savetaplinkstate&value='+string+'&id='+this.id+'&name='+this.getAttribute('name')).then(x => x.json()).then(y=> document.getElementById('FlexStatus').innerHTML = y.status).then(z=> showTooltip())}" type="url" class="input-2 w-input" maxlength="256" name="SocialProviderMainUrl" data-name="Name 11" asp-for="SocialProviderMainUrl" placeholder="Insert Link" id="@Model.Id">
                    <div class="card-setting-switcher">
                        <label class="w-checkbox switcher-wrapper-checkbox">
                            @if (Model.ShowPreview)
                            {
                                <div class="w-checkbox-input w-checkbox-input--inputType-custom switcher-button-checkbox w--redirected-checked"></div>
                                <input onclick="fetch('/homeboard/Index?handler=savetaplinkstate&value='+this.previousElementSibling.getAttribute('class')+'&id='+this.id+'&name='+this.getAttribute('name')).then(x => x.json()).then(y=> document.getElementById('FlexStatus').innerHTML = y.status).then(z=> showTooltip())" type="checkbox" name="ShowPreview" asp-for="ShowPreview" id="@Model.Id" data-name="Checkbox 15" checked="" style="opacity:0;position:absolute;z-index:-1">
                                <span class="checkbox-label-8 w-form-label" for="checkbox-15"></span>

                            }
                            else
                            {
                                <div class="w-checkbox-input w-checkbox-input--inputType-custom switcher-button-checkbox"></div>
                                <input onclick="fetch('/homeboard/Index?handler=savetaplinkstate&value='+this.previousElementSibling.getAttribute('class')+'&id='+this.id+'&name='+this.getAttribute('name')).then(x => x.json()).then(y=> document.getElementById('FlexStatus').innerHTML = y.status).then(z=> showTooltip())" type="checkbox" name="ShowPreview" asp-for="ShowPreview" id="@Model.Id" data-name="Checkbox 15" style="opacity:0;position:absolute;z-index:-1">
                                <span class="checkbox-label-8 w-form-label" for="checkbox-15"></span>

                            }
                        </label>
                    </div>
                </div>
                <div class="list-only-block">
                    @if (User.IsInRole("Citizen") && Model.LinkType == Domain.Entities.LinkType.Flex || User.IsInRole("Adminis") && Model.LinkType == Domain.Entities.LinkType.Flex)
                    {
                        <input onblur="javascript:{var string = this.value;if (!~string.indexOf('http') && string != '') {string = 'https://' + string;} this.value=string; fetch('/homeboard/Index?handler=savetaplinkstate&value='+string+'&id='+this.id+'&name='+this.getAttribute('name')).then(x => x.json()).then(y=> document.getElementById('FlexStatus').innerHTML = y.status).then(z=> showTooltip())}" type="url" class="input-2 w-input" maxlength="256" name="CustomImage" asp-for="CustomImage" data-name="Name 11" placeholder="Image Link" id="@Model.Id">
                    }
                                       <input onblur="fetch('/homeboard/Index?handler=savetaplinkstate&value='+this.value+'&id='+this.id+'&name='+this.getAttribute('name')).then(x => x.json()).then(y=> document.getElementById('FlexStatus').innerHTML = y.status).then(z=> showTooltip())" type="text" class="input-2 w-input" maxlength="256" name="Title" asp-for="Title" data-name="Name 11" placeholder="Call To Action" id="@Model.Id" required="" />
                    
                    <textarea onblur="fetch('/homeboard/Index?handler=savetaplinkstate&value='+this.value+'&id='+this.id+'&name='+this.getAttribute('name')).then(x => x.json()).then(y=> document.getElementById('FlexStatus').innerHTML = y.status)" placeholder="Caption" maxlength="5000" id="@Model.Id" name="Description" asp-for="Description" data-name="field" class="input-2 w-input"></textarea>
                </div>
            </div>
        </div>
        <div class="div-block-97">
            <img onclick="javascript:{ this.parentElement.parentElement.parentElement.remove(); fetch('/homeboard/Index?handler=deletetaplink&id=@Model.Id').then(x=> x.json()).then(y=> document.getElementById('OpenFlexList').insertAdjacentHTML('beforeend', y.view))}" src="../images/close-x-delete-reject-decline.png" loading="lazy" alt="" class="image-86 cta">
            </div>
    </form>
    <div class="w-form-done">
        <div>Thank you! Your submission has been received!</div>
    </div>
    <div class="w-form-fail">
        <div>Oops! Something went wrong while submitting the form.</div>
    </div>
</div>